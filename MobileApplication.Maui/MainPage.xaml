<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApplication.Maui.MainPage"
    Title="Order Info">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Order Info" FontSize="24" FontAttributes="Bold" />

            <Label x:Name="OrderIdLabel" />
            <Label x:Name="CustomerLabel" />
            <Label x:Name="ProductsLabel" />
            <Label x:Name="LatestDeliveryStateLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>